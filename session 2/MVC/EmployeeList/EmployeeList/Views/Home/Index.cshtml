@model IEnumerable<EmployeeList.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-controller="Home" asp-action="Create">Create New</a>
</p>
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsExperience)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Skill)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsExperience)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.EmployeeID">
                        <li class="glyphicon glyphicon-edit"></li> Edit</a> |
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.EmployeeID">
                        <li class="glyphicon glyphicon-list"></li> Details</a> |
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.EmployeeID">
                        <li class="glyphicon glyphicon-trash" ></li> Delete
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>  